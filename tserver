# Create the tserver launcher script
    mkdir -p "$HOME/terraria-server-script-for-termux"
    cat > "$HOME/terraria-server-script-for-termux/tserver" <<EOF
#!/data/data/com.termux/files/usr/bin/bash
mono --server --gc=sgen -O=all \$HOME/1449/Linux/TerrariaServer.exe
EOF
    chmod +x "$HOME/terraria-server-script-for-termux/tserver"

    # Add script dir to PATH if not already there
    SCRIPT_DIR="\$HOME/terraria-server-script-for-termux"
    if ! grep -q "\$SCRIPT_DIR" "\$HOME/.bashrc"; then
        echo 'export PATH="\$PATH:\$HOME/terraria-server-script-for-termux"' >> "\$HOME/.bashrc"
    fi

    # Reload PATH immediately
    export PATH="\$PATH:\$HOME/terraria-server-script-for-termux"

    # OPTIONAL: source .bashrc again to be extra sure
    source "\$HOME/.bashrc"

    clear
    echo "Installation complete!"
    echo "You can now type: tserver"
