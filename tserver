DIR="/data/data/com.termux/files/home/1449/Linux/"
if [ -d "$DIR" ]; then
    clear
    mono --server --gc=sgen -O=all ~/1449/Linux/TerrariaServer.exe
else
    apt update && apt upgrade -y
    apt install mono wget unzip -y
    wget https://terraria.org/api/download/pc-dedicated-server/terraria-server-1449.zip
    unzip terraria-server-1449.zip
    cd ~/1449/Linux
    rm System*
    rm Mono*
    rm monoconfig
    rm mscorlib.dll
    cd
    clear
    echo export PATH=$PATH:~/terraria-server-script-for-termux >> ~/.bashrc
    export PATH=/data/data/com.termux/files/usr/bin:/data/data/com.termux/files/home/terraria-server-script-for-termux
    clear
    echo to run type tserver
    fi
   
